<h1>My Friends</h1>
<h3>Friends</h3>
<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag search_friends_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: "Friend Email", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do  %>
          <%# from FontAwesome gem %>
          <%= fa_icon 'search 2x'  %>
        <% end %>
      </div>
    </div>
  <% end %>


<% if !@followed_friends.empty? %>
  <%= render 'friendships/list' %>
<% end %>